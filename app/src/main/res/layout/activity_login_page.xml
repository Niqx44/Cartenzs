<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="100dp">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="48dp"
                    android:text="Hello!"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp" />
                <TextView
                    android:id="@+id/datang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="48dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/selamat_datang"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp" />

                <LinearLayout
                    android:id="@+id/rspawdcrnos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tl50tr50bffffff"
                    android:orientation="vertical"
                    android:paddingTop="50dp">

                    <TextView
                        android:id="@+id/rbeb75valf4j"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="48dp"
                        android:layout_marginBottom="10dp"
                        android:text="Email"
                        android:textColor="#2F572E"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/r55ca7hz3j6s"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginHorizontal="46dp"
                        android:layout_marginBottom="11dp"
                        android:background="@null"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/emaillogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g user@gmail,com"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColorHint="#757575"
                            tools:ignore="TouchTargetSizeCheck"></EditText>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rdqlxbvnd43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="48dp"
                        android:layout_marginBottom="10dp"
                        android:text="Kata sandi"
                        android:textColor="#30572E"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/rjeq8ammdkia"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginHorizontal="46dp"
                        android:layout_marginBottom="12dp"
                        android:background="@null"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/passwordlogin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
                            android:hint="e.g pasword123"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColorHint="#757575"
                            tools:ignore="TouchTargetSizeCheck"></EditText>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lupapass"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginHorizontal="47dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:minHeight="48dp"
                        android:text="Lupa sandi?"
                        android:textColor="#30572E"
                        android:textSize="12sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <LinearLayout
                        android:id="@+id/rjdhhu5jhqx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="46dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">

                        <Button
                            android:id="@+id/buttonmasuk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cr10lr27067bd642f572e"
                            android:fontFamily="sans-serif-black"
                            android:text="Masuk"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rfeqjnn4afz6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="122dp"
                        android:layout_marginBottom="17dp"
                        android:gravity="center"
                        android:text="Masuk dengan cara lain"
                        android:textColor="#1C1C1C"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/googlebutton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_edit_text"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="70dp"
                        tools:ignore="TouchTargetSizeCheck">

                        <ImageView
                            android:id="@+id/google"
                            android:layout_width="25dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/google" />

                        <TextView
                            android:id="@+id/masukgoogle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="7dp"
                            android:text="Masuk dengan google"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/facebookbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="45dp"
                        android:background="@drawable/rounded_edit_text"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="64dp"
                        tools:ignore="TouchTargetSizeCheck">

                        <ImageView
                            android:id="@+id/facebook"
                            android:layout_width="25dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/facebook" />

                        <TextView
                            android:id="@+id/masukfacebook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="7dp"
                            android:text="Masuk dengan Facebook"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textviewsignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="90dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Belum punya akun? Daftar disini"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
